<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/totalDeathTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/death1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/totalDeathNb"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalDeathNb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="182 359"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listDeath"
        app:layout_constraintTop_toBottomOf="@id/totalDeathTxt" />

    <ListView
        android:id="@+id/listDeath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/totalDeathNb"/>


</androidx.constraintlayout.widget.ConstraintLayout>